<%= javascript_include_tag :defaults %>

<h2><%= @score_group.description %> Scores</h2>
<h3><%= @score_group.title %></h3>
<ul id="score_group">

	<% @score_group.scores.each do |score| %>
	<li id ="score_<%= score.id %>">
			<%= score.title %> in position <%= score.position %>
	</li>
	<% end %>

<%= link_to t('edit'), :action => :edit, :id => @score_group %> |
<%= link_to 'Back', :action => :list %>

<%= sortable_element 'score_group',
 			:url => { :action => "sort", :id => @score_group }, 
			:complete => visual_effect(:highlight, 'score_group')
%>