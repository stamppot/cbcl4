<tr id="add_new_score_item">
  <td><%= select("score_item", "question_id", @items)  %></td>
  <td><%= text_field("score_item", "range", { :size => 5 }) %></td>
  <td><%= select("score_item", "qualifier", @score.item_qualifiers.to_a) %></td>
  <td><%= text_field("score_item", "items", { :size => 42 }) %></td>
</tr>

<tr id="create_score_item_button">
	<td>
		<div class="button">
			<a onclick="create_score_item(<%= @score.id %>); return false;" href="#" class="button"><span class="accept"><%= t('add') %></span></a>
		</div>
	<%# link_button_to_remote t(:add), 'accept', :url => create_score_item_path(@score),
	 :submit => "add_new_score_item" %>&nbsp;&nbsp;
	<div class="cancel"><a class="button" onclick="cancel_score_item();" href="#"><%= t(:cancel) %></a></div>
	</td>
</tr>