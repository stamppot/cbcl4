	<% group = subscription_presenter.group %>
	<% group_id = group.id %>

<div id="tab-container">
	<ul class="tabs" id="subscription_tabs_<%= group_id %>" class="subsection_tabs">  
	    <li class="tab"><a href="#summary_view_<%= group_id %>"><%= t('subscription.overview') %></a></li>  
	    <li class="tab"><a href="#detailed_view_<%= group_id %>"><%= t('subscription.details') %></a></li> 
	</ul>
	<div class="tab_canvas" id="tab_canvas_<%= group_id %>">
		<br/>
	<div class="summary_view" id="summary_view_<%= group_id %>">
		<% if group.subscriptions.length > 0 %>
			<%= render :partial => "shared/subscription_summary", :object => subscription_presenter.summary_view %>
		<% else %>
			<h4><%= t('subscription.none') %></h4>
		<% end %>
	</div>
	<div class="detailed_view" id="detailed_view_<%= group_id %>">
		<div id="subscription_details_<%= group_id %>" style="display: normal;">
			<%= render :partial => "shared/subscription_list_new", :object => subscription_presenter.detailed_view %>
		</div>
	</div>
	<br/>
	<% if current_user.access?(:subscription_new_edit) || (@options && !@options[:hide_buttons] || false) %>
			<%= link_button t('subscription.change_subscription'), new_subscription_path(group), 'subscription_edit', :title => 'Forandr abonnementer' %>
	<% end %>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$('#tab-container').easytabs({  
			animate: true,
		  	animationSpeed: "fast"
		});
	});
