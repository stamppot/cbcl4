
<script type="text/javascript">
	function generate_password() {
		$.get('/generate_password/', function(response) {
			$('#password').val(response.password);
			$('#password_confirmation').val(response.password);
			$('#new_password').text("Husk " + response.password);
		});
	}
</script>
<div id='password_help'>
	<div class="button">
		<a class="button" onclick="generate_password();" href="#">
			<span class="password"><%= t('password.suggest') %></span>
		</a>
	</div>
		<%# link_button_to_remote t('password.suggest'), 'password', :url => generate_password_path %>
	<div id='new_password'></div>
</div>

<dt><label for="password">Password</label></dt>
<dd>

<%- if @user.errors.any? %>
  	<div class="fieldWithErrors">
<%- else %>
	<div>
<%- end %>
	<%= password_field :user, :password, { :size => 20, :id => 'password' } %>
  </div>

<%- if params[:action] == 'edit' -%>  
	<div class="hint">Efterlad tom for u√¶ndret password</div>
<%- end -%>
</dd>

