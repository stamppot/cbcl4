<% @subtitle = "Vælg spørgeskema der skal bruges til scoreberegning" %>

<h3>Vælg spørgeskema til score-beregning <%= @score.title %></h3>

<%= form_tag :action => :edit_survey do %>

<dl>
	<dt><%= @subtitle %></dt>
	<dd>
		<%= render :partial => "shared/edit_survey" %>
	</dd>
</dl>


<%= submit_tag t('change'), :name => 'submit[update]', :class => 'button save' %>
<%= back_button edit_score_path(@score) %>

<% end %>